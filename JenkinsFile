pipeline {
    agent any
    environment {
        FIREBASE_DEPLOY_TOKEN = credentials('firebase-token')
    }
    stages {
        stage('Building') {
            steps {
                echo 'Building'
            }
        }
        stage('Testing') {
            steps {
                sh 'firebase deploy -P selenium-testing-testing --token "$FIREBASE_DEPLOY'
                echo 'Testing'
                
            }
        }
        stage('Staging') {
            steps {
                sh 'firebase deploy -P selenium-testing-staging --token "$FIREBASE_DEPLOY'
                echo 'Staging'
            }
        }
        stage('Production') {
            steps {
                sh 'firebase deploy -P selenium-testing-production --token "$FIREBASE_DEPLOY'
                echo 'Production'
            }
        }
    }
}
